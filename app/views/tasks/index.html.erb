<h1>Tasks are Listed Here: </h1>

<h3><%= link_to 'New Task?', new_task_path %></h3>


<% @tasks.each do |task| %>
<div>
	<%= task.name %>
	<%= task.description %>
  		<%= link_to 'Show', task_path(task)%>
  		<%= link_to 'Edit', edit_task_path(task)%>
  		<%= link_to 'Delete', task_path(task),
  method: :delete,
  data: {confirm: "Are you sure?"} %>

	
</div>
<% end %>

